            // æ›´æ–°é¢„è§ˆ - ç°åœ¨ä¼šè‡ªåŠ¨ä½¿ç”¨è‡ªå®šä¹‰èƒŒæ™¯
            updatePreview();
            
            showAlert('èƒŒæ™¯å›¾ç‰‡ä¸Šä¼ æˆåŠŸ', 'success');
        };
        img.onerror = function() {
            console.error('Failed to load image');
            showAlert('å›¾ç‰‡åŠ è½½å¤±è´¥', 'error');
